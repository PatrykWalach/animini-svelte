{
	"name": "animini-svelte",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"generate": "yarn dlx -p @babel/node -p @babel/core babel-node graphql-codegen",
		"prepare": "husky install && yarn generate",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "yarn check --watch",
		"test:unit": "vitest",
		"lint": "yarn prettier --check . && eslint .",
		"prettier": "prettier --plugin-search-dir . --cache --cache-strategy content",
		"format": "yarn prettier --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"lint-staged": {
		"*": [
			"yarn prettier --write"
		],
		"*{cjs,mjs,js,cts,mts,ts,svelte,html,md,mdx}": [
			"eslint"
		]
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.0",
		"@graphql-codegen/cli": "2.16.1",
		"@graphql-codegen/client-preset": "1.2.3",
		"@graphql-codegen/introspection": "^2.2.3",
		"@graphql-codegen/typescript-apollo-client-helpers": "^2.2.6",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "1.25.0",
		"@storybook/addon-essentials": "7.0.0-beta.14",
		"@storybook/addon-interactions": "7.0.0-beta.14",
		"@storybook/addon-links": "7.0.0-beta.14",
		"@storybook/blocks": "7.0.0-beta.14",
		"@storybook/builder-vite": "7.0.0-beta.14",
		"@storybook/core-events": "7.0.0-beta.14",
		"@storybook/preview-api": "7.0.0-beta.14",
		"@storybook/svelte": "7.0.0-beta.14",
		"@storybook/sveltekit": "7.0.0-beta.14",
		"@storybook/testing-library": "^0.0.14-next.1",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "1.0.1",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"autoprefixer": "^10.4.13",
		"cross-env": "^7.0.3",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-mdx": "^2.0.5",
		"eslint-plugin-storybook": "^0.6.8",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.2",
		"lint-staged": "^13.1.0",
		"postcss": "^8.4.19",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "7.0.0-beta.14",
		"storybook-addon-pseudo-states": "^2.0.0--canary.47.bc9d22a.0",
		"svelte": "^3.46.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.2.4",
		"ts-dedent": "^2.2.0",
		"ts-node": "^10.9.1",
		"tslib": "^2.3.1",
		"typescript": "4.9.3",
		"vite": "^4.0.3",
		"vitest": "^0.23.4"
	},
	"type": "module",
	"dependencies": {
		"@apollo/client": "^3.7.2",
		"fp-ts": "^2.13.1",
		"graphql": "^16.6.0",
		"graphql-request": "^5.1.0"
	},
	"packageManager": "yarn@2.4.3"
}
