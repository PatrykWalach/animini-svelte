{
	"name": "animini-svelte",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"generate": "cross-env NODE_OPTIONS=\"--loader ts-node/register\" graphql-codegen",
		"prepare": "husky install && npm run generate",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "npm run check -- --watch",
		"test:unit": "vitest",
		"lint": "npm run prettier -- --check . && eslint .",
		"prettier": "prettier --plugin-search-dir . --cache --cache-strategy content",
		"format": "npm run prettier -- --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"lint-staged": {
		"*": [
			"npm run prettier -- --write"
		],
		"*{cjs,mjs,js,cts,mts,ts,svelte,html,md,mdx}": [
			"eslint"
		]
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@graphql-codegen/cli": "2.16.1",
		"@graphql-codegen/client-preset": "1.2.3",
		"@graphql-codegen/introspection": "^2.2.3",
		"@graphql-codegen/typescript-apollo-client-helpers": "^2.2.6",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "1.29.1",
		"@storybook/addon-essentials": "7.0.0-beta.15",
		"@storybook/addon-interactions": "7.0.0-beta.15",
		"@storybook/addon-links": "7.0.0-beta.15",
		"@storybook/blocks": "7.0.0-beta.15",
		"@storybook/svelte": "7.0.0-beta.15",
		"@storybook/sveltekit": "7.0.0-beta.15",
		"@storybook/testing-library": "^0.0.14-next.1",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "1.0.1",
		"@types/cookie": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.47.1",
		"autoprefixer": "^10.4.13",
		"cross-env": "^7.0.3",
		"eslint": "^8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-mdx": "^2.0.5",
		"eslint-plugin-storybook": "^0.6.8",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.2",
		"lint-staged": "^13.1.0",
		"postcss": "^8.4.20",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"prettier-plugin-tailwindcss": "^0.2.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "7.0.0-beta.15",
		"storybook-addon-pseudo-states": "^2.0.0-next.0",
		"svelte": "^3.55.0",
		"svelte-check": "^3.0.1",
		"svelte-preprocess": "^5.0.0",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.3",
		"vitest": "^0.26.2"
	},
	"type": "module",
	"dependencies": {
		"@apollo/client": "^3.7.3",
		"fp-ts": "^2.13.1",
		"graphql": "^16.6.0",
		"graphql-request": "^5.1.0"
	}
}
